<% provide(:title, 'All Articles') %>

<h1>Draft Articles</h1>
<%= will_paginate %>
<div class="articles container">
  <% @articles.each do |article| %>
    <div class="article">
      <div class="row">
        <div class="col-md-8"> 
          <h1 class="title">
            <%= link_to ("<span class='glyphicon glyphicon-edit'>").html_safe, edit_article_path(article.id), title: "Edit", class: "edit-link" %>
              <%= link_to article.title, article.url %> 
          </h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4"> <span class="posted">Updated: <%= article.updated_at %> </span> </div>
        <div class="col-md-4"> <span class="posted">Created: <%= article.created_at %> </span> </div>
        <div class="col-md-4"> <span class="posted">Author: <%= article.user.name %> </span> </div>
      </div>
    </div>
  <% end %>
</div>

<%= will_paginate %>
