<?xml version="1.0"?>
<!-- RSS generated by textfi on <%= Time.now.rfc822 %> -->
<rss version="2.0" xmlns:blogChannel="http://backend.userland.com/blogChannelModule">
	<channel>
  <title><%= @blog.title %></title>
  <link><%= @blog.baseurl %></link>
  <description><%= "blog summary tbd" %></description>
  <language>ja</language>
    <copyright>Copyright 2016 <%= @author.name %></copyright>
    <lastBuildDate><%= Time.now.rfc822 %></lastBuildDate>
		<docs>http://www.rssboard.org/rss-specification</docs>
		<generator>Textfi.com - simple blog tool by Rails</generator>
		<category domain="Syndic8">1765</category>
    <managingEditor><%= @author.email %> (<%= @author.name %>)</managingEditor>
    <webMaster><%= @author.email %> (<%= @author.name %>)</webMaster>
		<ttl>40</ttl>
    <% @articles.each do |article| %>
		<item>
    <title><%= article.title %></title>
    <link><%= article.url %></link>
			<description>
        <%= article.content %>
			</description>
      <pubDate><%= article.published_at.rfc822 %></pubDate>
      <guid><%= article.url %></guid>
			</item>
    <% end %>
		</channel>
	</rss>
