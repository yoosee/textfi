<header class="navbar navbar-fixed-top navbar-inverse">
<nav>
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#top-nav">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag("/system/W3er-white.png", alt: "World Wide Walker"), root_path, id: "logo", class: "img-responsive" %>
    </div>

    <div class="collapse navbar-collapse" id="top-nav">
      <%= render 'layouts/google' %>

      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if @blog %> 
          <li><a href="#" data-toggle="popover" data-placement="bottom" data-trigger="focus" data-container="body" title="About <%= @blog.title %>" data-content='<%== @blog.summary %>'>About</a></li> 
        <% end %>
        <script>
        $(document).ready(function(){
          $('[data-toggle="popover"]').popover({
            html : true,
            content: function() {
              return $('#popoverAbout').html();
            }
          });
        });
        </script>
        <% if signed_in? %>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "New Article", articles_new_path %></li>
              <li><%= link_to "Drafts", articles_drafts_path %></li>
              <li><%= link_to "Media", media_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "Blogs", blogs_path %></li>
              <li><%= link_to "Users", users_path %></li>
              <li class="divider"></li>
              <li> <%= link_to "Sign out", signout_path, method: "delete" %> </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Login", signin_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
</header>

