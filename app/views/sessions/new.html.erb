<% provide(:title, "Login") %>
<h1>Login</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email, clsas: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, clsas: 'form-control' %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>

