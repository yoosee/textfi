

<h1>Setup Initial User & Blog</h1>

  <div class="row">
    <div class="span6 offset3">
      <h2>User Setup</h2>
      <%= form_tag({controller: "setup", action: "create"}) do %>
        <%= render 'shared/error_messages' %>
        <%= label :name, "Name" %> <%= text_field :user, :name %>
        <%= label :email, "Email" %> <%= text_field :user, :email, class: 'form-control' %>
        <%= label :password, "Password" %> <%= password_field :user, :password, class: 'form-control' %>
        <%= label :password_confirmation, "Password Confirmation" %> <%= password_field :user, :password_confirmation, class: 'form-control' %>

      <h2>Blog Setup</h2>
        <%= label :title, "Blog Title" %> <%= text_field :blog, :title, class: 'form-control' %>
        <%= label :baseurl, "Blog base URL" %> <%= text_field :blog, :baseurl, class: 'form-control' %>

        <%= submit_tag "Create Account & Blog", class: "btn btn-large btn-primary" %>
      <% end %>
     </div>
  </div>


